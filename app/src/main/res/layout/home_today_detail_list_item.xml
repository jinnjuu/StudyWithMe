<?xml version="1.0" encoding="utf-8"?>

<!-- @by jiyun: 홈 화면의 today에 필요한 리스트 레이아웃 db는 detail 임.-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <LinearLayout
        android:id="@+id/home_today_detailedWork_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:textAlignment="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.5">

            <CheckBox
                android:fontFamily="@font/nanum2"
                android:id="@+id/home_check_today_detailedWork_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_detail_list_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_weight="8.5"
            android:gravity="center">
            <TextView
                android:fontFamily="@font/nanum2"
                android:id="@+id/home_detail_list_item_todayDetailedWork"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:autoSizeTextType="uniform"
                android:text="아직 추가된 할일이 없습니다. 오늘 할일을 추가해보세요"
                tools:text="TodayDetailedWork" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>