<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" tools:layout_editor_absoluteX="-263dp" tools:layout_editor_absoluteY="364dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#83cac5"
            android:text="게시글"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20dp"
       />
        <LinearLayout
            android:paddingTop="25dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 선택:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
            />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
            />
            <Spinner
                android:id="@+id/spinner_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:entries="@array/goal"

            />
        </LinearLayout>
        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="내용을 입력하세요"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:gravity="top"
        android:background="@drawable/line_box"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="#"
           android:textSize="25dp"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           android:textColor="#b01809"
           android:textStyle="bold|italic"/>
       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="해시태그를 입력하세요."
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:ems="15"
           android:background="@drawable/line_box"/>

   </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
        android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rboard_button"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="등록"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gboard_btn_shape"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#e74c3c"
                  android:text="취소"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>