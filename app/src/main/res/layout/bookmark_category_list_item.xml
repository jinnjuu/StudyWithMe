<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/bookmark_category_list_item_border">

    <TextView
        android:id="@+id/bookmark_category_list_item_categoryName"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CategoryName" />

    <TextView
        android:id="@+id/bookmark_category_list_item_detailedWork"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/bookmark_category_list_item_categoryName"
        tools:text="DetailedWork"></TextView>


</android.support.constraint.ConstraintLayout>